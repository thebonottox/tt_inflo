@model UserManagement.Web.Models.Users.UserViewModel
<h2>Delete User</h2>
<h3>Are you sure you want to delete this user?</h3>
<div>
    <dl>
        <dt>Forename</dt>
        <dd>@Model.Forename</dd>
        <dt>Surname</dt>
        <dd>@Model.Surname</dd>
        <dt>Email</dt>
        <dd>@Model.Email</dd>
        <dt>Date of Birth</dt>
        <dd>@(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("dd/MM/yyyy") : "")</dd>
        <dt>Active</dt>
        <dd>@(Model.IsActive ? "Yes" : "No")</dd>
    </dl>
    <form asp-controller="Users" asp-action="DeleteUser" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </form>
</div>